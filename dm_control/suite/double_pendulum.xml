<!--
Based on Spong's model [1] with the parameters found in [2].
[1] Spong, M. W., & Block, D. J. (1995, December).
    The pendubot: A mechatronic system for control research and education.
    In Proceedings of 1995 34th IEEE Conference on Decision and Control (Vol. 1, pp. 555-556). IEEE.
[2] Deisenroth, M. P., Fox, D., & Rasmussen, C. E. (2015).
    Gaussian processes for data-efficient learning in robotics and control.
    IEEE transactions on pattern analysis and machine intelligence, 37(2), 408-423.
-->
<mujoco model="pendubot">
  <include file="./common/visual.xml"/>
  <include file="./common/skybox.xml"/>
  <include file="./common/materials.xml"/>

  <default>
    <joint damping="0.01"/>
    <geom type="capsule" mass="0.5"/>
  </default>

  <option timestep="0.01" integrator="RK4">
    <flag constraint="disable" energy="enable"/>
  </option>

  <worldbody>
    <light name="light" pos="0 0 6"/>
    <geom name="floor" size="3 3 .2" type="plane" material="grid"/>
    <site name="target" type="sphere" pos="0 0 2" size="0.2" material="target" group="3"/>
    <camera name="fixed" pos="0 -6 2" zaxis="0 -1 0"/>
    <camera name="lookat" mode="targetbodycom" target="upper_arm" pos="0 -2 3"/>
    <body name="upper_arm" pos="0 0 1">
      <joint name="shoulder" type="hinge" axis="0 1 0"/>
      <geom name="upper_arm_decoration" material="decoration" type="cylinder" fromto="0 -.06 0 0 .06 0" size="0.051" mass="0"/>
      <geom name="upper_arm" fromto="0 0 0 0 0 0.5" size="0.05" material="self"/>
      <body name="lower_arm" pos="0 0 0.5">
        <joint name="elbow" type="hinge" axis="0 1 0"/>
        <geom name="lower_arm" fromto="0 0 0 0 0 0.5" size="0.049" material="self"/>
        <site name="tip" pos="0 0 0.5" size="0.01"/>
      </body>
    </body>
  </worldbody>

   <actuator>
    <motor name="shoulder" joint="shoulder" gear="1" ctrllimited="true" ctrlrange="-2. 2."/>
  </actuator>
  <actuator>
    <motor name="elbow" joint="elbow" gear="1" forcelimited="true" forcerange="-2. 2."/>
  </actuator>
</mujoco>
